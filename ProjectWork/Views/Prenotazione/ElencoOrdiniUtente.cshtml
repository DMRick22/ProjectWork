﻿﻿@using ProjectWork.Models
@model List<Utility.Entity>

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Home - WiWin</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/HomeCss/style.css">
    <style>
     hr {
         margin-top: 1rem;
         margin-bottom: 0rem;
         border: 0;
         border-top: 0px solid rgba(0,0,0,.1)!important;
      }
    </style>
</head>
<body>

    <!-- navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white">
        <img src="~/Logo.jpg" width="80" height="80"/>
        <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div id="navbarCollapse" class="collapse navbar-collapse justify-content-start">
            <div class="navbar-nav">
                <a href="/Corso/HomeUser" class="nav-item nav-link homeLink">Home</a>
                <a href="/Corso/ContattiUser" class="nav-item nav-link">Contatti</a>
                <a href="/Prenotazione/ElencoOrdiniUtente" class="nav-item nav-link">Prenotazioni</a>
                <a href="/Corso/IMieiDettagli" class="nav-item nav-link">I Miei Dettagli</a>
            </div>
            <div class="ml-auto mr-auto mt-3">
            </div>
            <div class="navbar-nav action-buttons ml-auto">
                <a href="/Login/Index" class="btn btn-warning">Logout</a>
            </div>
        </div>
    </nav>


    <div id="message"></div>

    <div class="container my-3">

            <h1>Prenotazioni</h1>
            <table class="table table-striped">
                <thead>

                    <tr>
                        <th scope="col">Numero Ordine</th>
                        <th scope="col">Data Iscrizione</th>
                        <th scope="col">Corso</th>
                        <th scope="col">Strumenti</th>
                    </tr>

                    @foreach (var p in @Model)
                    {
                        <tr>
                            <td>@(((Prenotazione)p).Id)</td>
                            <td>@((((Prenotazione)p).DataPrenotazione).ToShortDateString())</td>
                            <td><a href="/Corso/DettagliCorsoUser/@(((Prenotazione)p).IdCorsi)">@(((Prenotazione)p).IdCorsi)</a></td>
                            <td><a href="/Prenotazione/EliminaPrenotazioneUser/@(((Prenotazione)p).Id)" onclick="return confirm('Procedere con la disiscrizione al corso:  @(((Prenotazione)p).IdCorsi) ?')">Disiscriviti</a></td>
                         </tr>

                    }
                </thead>
                <tbody id='tableBody'></tbody>
            </table>

        </div>
        <!-- footer -->
        <footer class="text-center text-white fixed-bottom">
            <!-- container -->
            <div class="container-footer">


                <hr class="mb-5" />

                <!-- testo footer -->
                <section class="mb-5">
                    <div class="row d-flex justify-content-center">
                        <div class="col-lg-8">
                            <p>
                                Lorem ipsum dolor sit amet consectetur adipisicing elit. Sunt
                                distinctio earum repellat quaerat voluptatibus placeat nam,
                                commodi optio pariatur est quia magnam eum harum corrupti
                                dicta, aliquam sequi voluptate quas.
                            </p>
                        </div>
                    </div>
                </section>
            </div>

            <!-- copyright -->
            <div class="text-center p-3"
                 style="background-color: rgba(0, 0, 0, 0.2)">
                © 2022 Copyright -
                <a class="text-white" href="#">WiWin</a>
            </div>
        </footer>


        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
</body>
</html>   